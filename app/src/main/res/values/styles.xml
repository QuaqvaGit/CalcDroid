<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeyboardNumberButton">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:insetBottom">5dp</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name = "android:textSize">15sp</item>
        <item name = "iconGravity">textStart</item>
        <item name = "iconTint">@null</item>
    </style>
    <style name="KeyboardLetterButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:insetBottom">5dp</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:textSize">17sp</item>
        <item name = "iconGravity">textStart</item>
        <item name = "iconTint">@null</item>
    </style>
    <style name = "KeyboardOperationButton">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:insetBottom">5dp</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name = "android:textSize">18sp</item>
        <item name = "iconGravity">textStart</item>
        <item name = "iconTint">@null</item>

    </style>
    <style name = "KeyboardUpperButton">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "strokeColor">@color/black</item>
        <item name = "strokeWidth">0.7dp</item>
        <item name = "cornerRadius">0dp</item>
        <item name = "android:textSize">16sp</item>
        <item name = "iconGravity">textStart</item>
        <item name = "iconTint">@null</item>
    </style>

    <style name = "GraphDeleteButton">
        <item name = "android:layout_width">40dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="iconTint">@null</item>
        <item name = "android:backgroundTint">@color/white</item>
        <item name = "strokeColor">@color/black</item>
        <item name = "strokeWidth">0.7dp</item>
        <item name = "iconGravity">textStart</item>
        <item name="icon">@drawable/trash</item>
        <item name="iconSize">20dp</item>
    </style>
    <style name = "MathInput">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">50dp</item>
        <item name = "android:textSize">20sp</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:gravity">center_horizontal</item>
        <item name = "android:letterSpacing">0.1</item>
        <item name = "android:inputType">text|textNoSuggestions</item>
    </style>
    <style name="Default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

</resources>