<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/keyboard"
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:layout_gravity="bottom"
                android:background="@color/green"
                android:paddingTop="5dp">
    <TableLayout
            android:id="@+id/topRow"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:layout_gravity = "top">
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <Button style="@style/KeyboardUpperButton"
                    android:text="abc" android:id="@+id/btnLetter"
                    android:tag="SWITCH_TO_LETTERS"/>
            <Button style="@style/KeyboardUpperButton"
                    android:text="f(x)"
                    android:id="@+id/btnFunc"
                    android:tag="SWITCH_TO_FUNCTIONS"/>
            <Button style="@style/KeyboardUpperButton"
                    android:src="@drawable/left_arrow"
                    app:icon="@drawable/left_arrow"
                         android:gravity="center"
                         android:id="@+id/btnCursorLeft"
                    android:tag="CURSOR_LEFT"/>
            <Button style="@style/KeyboardUpperButton"
                    android:src="@drawable/right_arrow"
                    app:icon="@drawable/right_arrow"
                    android:id="@+id/btnCursorRight"
                    android:tag="CURSOR_RIGHT"/>
            <Button style = "@style/KeyboardUpperButton"
                    android:src="@drawable/backspace"
                    app:icon="@drawable/backspace"
                    android:id = "@+id/btnBackspace"
                    android:tag="BACKSPACE"/>
        </TableRow>
    </TableLayout>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topRow">
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button style = "@style/KeyboardLetterButton"
                    android:text = "x"
                    android:id = "@+id/btnX"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardNumberButton"
                    android:text="9"
                    android:id="@+id/btn9"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardNumberButton"
                    android:text="8"
                    android:id="@+id/btn8"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardNumberButton"
                    android:text="7"
                    android:id="@+id/btn7"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardOperationButton"
                    android:text="+"
                    android:id="@+id/btnPlus"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardOperationButton"
                    android:text="-"
                    android:id="@+id/btnMinus"
                    android:tag="LETTER"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button style="@style/KeyboardNumberButton"
                    android:text="π"
                    android:id="@+id/btnPi"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardNumberButton"
                    android:text="6"
                    android:id="@+id/btn6"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardNumberButton"
                    android:text="5"
                    android:id="@+id/btn5"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardNumberButton"
                    android:text="4"
                    android:layout_width="32dp"
                    android:id="@+id/btn4"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardOperationButton"
                    android:text="("
                    android:id="@+id/btnLeftBracket"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardOperationButton"
                    android:text=")"
                    android:id="@+id/btnRightBracket"
                    android:tag="LETTER"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button style="@style/KeyboardOperationButton"
                        app:icon="@drawable/power"
                        app:iconSize="15dp"
                        android:tag="POWER"
                         android:id="@+id/btnPower"/>
            <Button style="@style/KeyboardNumberButton"
                    android:text="3"
                    android:id="@+id/btn3"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardNumberButton"
                    android:text="2"
                    android:id="@+id/btn2"
                    android:tag="LETTER"/>
            <Button style="@style/KeyboardNumberButton"
                    android:text="1"
                    android:tag="LETTER"
                    android:id="@+id/btn1"/>
            <Button style="@style/KeyboardOperationButton"
                    android:text="×"
                    android:tag="LETTER"
                    android:id="@+id/btnMultiply"/>
            <Button style="@style/KeyboardOperationButton"
                    android:text="÷"
                    android:tag="LETTER"
                    android:id="@+id/btnFraction"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button style="@style/KeyboardOperationButton"
                        app:icon="@drawable/sqrt"
                        app:iconSize = "25dp"
                         android:tag="SQUARE_ROOT"
                         android:id="@+id/btnSqrt"
                         tools:ignore="TouchTargetSizeCheck"/>
            <Button style="@style/KeyboardOperationButton"
                    android:text=","
                    android:tag="LETTER"
                    android:id="@+id/btnComma" tools:ignore="TouchTargetSizeCheck"/>
            <Button style="@style/KeyboardNumberButton"
                    android:text="0"
                    android:tag="LETTER"
                    android:id="@+id/btn0" tools:ignore="TouchTargetSizeCheck"/>
            <Button style="@style/KeyboardOperationButton"
                    android:text="="
                    android:tag="LETTER"
                    android:id="@+id/btnEquals" tools:ignore="TouchTargetSizeCheck"/>
            <Button style="@style/KeyboardOperationButton"
                    android:id="@+id/btnLess"
                    android:tag="LESS"
                    app:icon="@drawable/less"
                    app:iconSize="14dp"
            />
            <Button style="@style/KeyboardOperationButton"
                    app:icon="@drawable/more"
                    android:tag="MORE"
                    android:id="@+id/btnMore"
                    app:iconSize="14dp"
            />

        </TableRow>
    </TableLayout>
</RelativeLayout>
