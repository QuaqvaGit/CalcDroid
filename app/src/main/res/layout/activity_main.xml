<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="true">
    </androidx.viewpager2.widget.ViewPager2>
    <com.google.android.material.tabs.TabLayout android:id="@+id/tabLayout"
                                                style="@style/Default"
                                                tools:ignore="MissingConstraints"
                                                android:layout_width="match_parent"
                                                android:layout_marginTop="78dp">

    </com.google.android.material.tabs.TabLayout>
    <androidx.appcompat.widget.Toolbar
            style="@style/Default"
            android:title="@string/app_name"
            android:layout_width="411dp"
            android:layout_height="78dp"
            android:background="@drawable/toolbar_bg"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
            app:layout_constraintHorizontal_bias="0.666" tools:ignore="MissingConstraints"
            android:layout_marginTop="0dp">
        <TextView style="@style/Default"
                  android:text="@string/app_name"
                  android:textSize="20sp"
                  android:textColor="#f8ffcc"
                  app:fontFamily="@font/archivo_black" tools:layout_editor_absoluteY="29dp"
                  tools:layout_editor_absoluteX="16dp"/>
    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>

